<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/background"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ui_list_gj"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <CheckBox
            android:id="@+id/project_checkboxID"
            android:layout_width="@dimen/xhdpi_70dp"
            android:layout_height="@dimen/xhdpi_50dp"
            android:layout_marginLeft="@dimen/xhdpi_10dp"
            android:button="@drawable/cb_style"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:text="12"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_20sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xhdpi_50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_projectName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                 android:paddingLeft="@dimen/xhdpi_10dp"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/xhdpi_22sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/xhdpi_25sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>