<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35pt"
    android:background="@color/yellow">

    <TextClock
        android:id="@+id/baseTitle_clock_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5pt"
        android:format24Hour="yyyy-MM-dd HH:mm:ss"
        android:textColor="?attr/textColor"
        android:textSize="15pt" />


    <TextView
        android:id="@+id/baseTitle_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/str_acTitle"
        android:textColor="?attr/textColor"
        android:textSize="17pt" />


    <ImageView
        android:id="@+id/baseTitle_power_iv"
        android:layout_width="35pt"
        android:layout_height="20pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7pt"
        android:src="@drawable/power" />

    <TextView
        android:id="@+id/baseTitle_power_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/baseTitle_power_iv"
        android:layout_marginRight="@dimen/x10"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/x16"
        android:text="0%"/>

</RelativeLayout>