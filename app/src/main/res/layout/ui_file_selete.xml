<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_params_setting"
        style="@style/titleTxtStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhdpi_45dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="文件浏览 "
        android:textColor="#FFFFFF"
        android:textSize="@dimen/xhdpi_30sp" />

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xhdpi_40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/xhdpi_80dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/xhdpi_10dp"
                    android:text="NO"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical"
                    android:text="工程名"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />

                <TextView
                    android:id="@+id/tv_recordNum"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="文件数"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />

                <TextView
                    android:id="@+id/tv_projectTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="更新日期"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />
            </LinearLayout>

            <View
                android:id="@+id/View2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/xhdpi_2dp"
                android:background="?attr/textColor" />

            <ListView
                android:id="@+id/ui_selete_folder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>

        <View
            android:id="@+id/View2"
            android:layout_width="@dimen/xhdpi_2dp"
            android:layout_height="match_parent"
            android:background="?attr/textColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xhdpi_40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/xhdpi_70dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/xhdpi_10dp"
                    android:text="NO"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:layout_weight="6.5"
                    android:gravity="center_vertical"
                    android:text="文件"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />
               

                <TextView
                    android:id="@+id/tv_projectTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/xhdpi_40dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="更新日期"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/xhdpi_20sp" />
            </LinearLayout>

            <View
                android:id="@+id/View2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/xhdpi_2dp"
                android:background="?attr/textColor" />

            <ListView
                android:id="@+id/ui_selete_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/View2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xhdpi_2dp"
        android:background="?attr/textColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/background" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/button"
            android:text=""
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/button"
            android:onClick="onAllSelect"
            android:text="全选"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />

        <Button
            android:id="@+id/ButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/button"
            android:onClick="onSaveSDcard"
            android:text="转U盘"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />

        <Button
            android:id="@+id/Button04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/button"
            android:onClick="onDelete"
            android:text="删除"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />

        <Button
            android:id="@+id/Button05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/button"
            android:onClick="onReturn"
            android:text="返回"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />
    </LinearLayout>

</LinearLayout>