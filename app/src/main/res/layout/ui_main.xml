<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical"
    tools:context=".CQActivity" >

    <LinearLayout
        android:id="@+id/ll_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:gravity="center_horizontal|bottom"
            android:text="HC-U8X"
            android:textColor="#E49320"
            android:textSize="@dimen/xhdpi_90sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal|top"
            android:paddingTop="@dimen/xhdpi_30dp"
            android:text="裂缝宽度检测"
            android:textColor="#E49320"
            android:textSize="@dimen/xhdpi_60sp" />

        <TextView
            android:id="@+id/yiqiDY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal|top"
            android:text=""
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/xhdpi_20dp"
            android:layout_weight="0.4"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/soft_version"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="软件版本号:v1.0"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/xhdpi_30sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:text="北京海创高科科技有限公司"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/xhdpi_40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_cj"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="startCollect"
            android:text="缝宽检测" />

        <Button
            android:id="@+id/bt_analyze"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="数据浏览" />

        <Button
            android:id="@+id/bt_set"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="ParaSet"
            android:text="软件更新" />

        <Button
            android:id="@+id/bt_exit"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onReturn"
            android:text="退出" />
    </LinearLayout>

</LinearLayout>