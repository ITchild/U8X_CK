<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xhdpi_500dp"
    android:layout_height="wrap_content"
    android:background="?attr/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhdpi_45dp"
        android:background="#F6B800"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#F6B800"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/xhdpi_15dp"
            android:text="数据保存"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/xhdpi_26sp" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/btn_style10"
            android:gravity="center"
            android:text="[取消] "
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/xhdpi_26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhdpi_150dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="@dimen/xhdpi_2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_Pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xhdpi_15dp"
                    android:layout_marginRight="@dimen/xhdpi_15dp"
                    android:gravity="center_vertical"
                    android:text="工程名"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/xhdpi_26sp" />

                <EditText
                    android:id="@+id/et_Pro_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/xhdpi_15dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="工程名称"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/xhdpi_22dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_gj_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xhdpi_15dp"
                    android:layout_marginRight="@dimen/xhdpi_15dp"
                    android:gravity="center_vertical"
                    android:text="构件名"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/xhdpi_26sp" />

                <EditText
                    android:id="@+id/et_gj_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/xhdpi_15dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="构件名称"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/xhdpi_22dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/xhdpi_2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhdpi_65dp"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_yes"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="确定" />

        <Button
            android:id="@+id/bt_no"
            style="@style/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>