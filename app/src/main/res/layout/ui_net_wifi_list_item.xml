<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xhdpi_40sp"
    android:background="#333333"
    android:layout_centerVertical="true"
    android:orientation="horizontal" >
      
    <TextView
        android:id="@+id/check_tv1"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="@dimen/xhdpi_40sp"
        android:text="No"
        android:textColor="#707070"
        android:textSize="@dimen/xhdpi_22sp" />

    <TextView
        android:id="@+id/check_tv2"
        android:layout_weight="6"
        android:gravity="left"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="@dimen/xhdpi_40sp"
        android:text="wifi name"
        android:textSize="@dimen/xhdpi_22sp" />

        
    <TextView
        android:id="@+id/check_tv3"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginRight="@dimen/xhdpi_7dp"
        android:layout_width="0dp"
        android:layout_height="@dimen/xhdpi_40sp"
        android:textSize="@dimen/xhdpi_22sp" />
        

</LinearLayout>