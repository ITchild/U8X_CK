<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xhdpi_420dp"
    android:layout_height="@dimen/xhdpi_210dp"
    android:orientation="vertical" >
   
     <LinearLayout 
         android:layout_height="@dimen/xhdpi_35dp"
         android:layout_width="match_parent"
         android:background="#F6B800"
         android:orientation="horizontal">

          
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/xhdpi_25sp"
             android:text="WIFI名称/密码"
             android:paddingLeft="@dimen/xhdpi_5dp"
             android:gravity="left|center_vertical"
             android:textColor="#FFFFFF"
             android:id="@+id/tv_title"
         />
          
          
          
     </LinearLayout>

<!--   -->   
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xhdpi_142dp"
        android:orientation="horizontal" >        
        
        <View 
                android:layout_width="@dimen/xhdpi_3dp"
                android:layout_height="match_parent"
                android:background="#A0A0A0">
         </View>
         
          <!--  右侧滚动条区域  -->    
         <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

           <ScrollView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/xhdpi_3dp"
                android:id="@+id/sample_scroll"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideInset">
                
               <LinearLayout 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"                        
                         android:orientation="vertical">   
                         
                         <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/xhdpi_45dp"
                                android:background="#000000"                            
                                android:orientation="horizontal" >
                                
                                <TextView 
                                     android:id="@+id/paraname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="WIFI名称:"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/xhdpi_25sp"/>
                                                                                                    
                                <EditText 
                                    android:id="@+id/wifi_name"
                                    android:layout_height="@dimen/xhdpi_40dp"
                                    android:layout_width="0dp"                   
                                    android:layout_weight="1"
                                    android:maxLength="30"
                                    android:imeOptions="flagNoFullscreen|flagNoExtractUi"
                                    android:inputType="number"
                                    android:digits="0123456789.-@+_#ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                    android:selectAllOnFocus="true"
                                    android:singleLine="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="1dp"
                                    android:gravity="left|center_vertical"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/xhdpi_22sp" />  
                         </LinearLayout>
                          
                         <View 
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/xhdpi_1dp"
                            android:background="#404040"
                         />
                         
                         <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/xhdpi_45dp"
                                android:background="#000000"                            
                                android:orientation="horizontal" >
                                
                                <TextView 
                                     android:id="@+id/paraname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="连接密码:"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/xhdpi_25sp"/>
                                
                                <EditText 
                                           android:id="@+id/strinput"
                                           android:layout_height="@dimen/xhdpi_40dp"
                                           android:layout_width="0dp"                   
                                           android:layout_weight="1"
                                           android:maxLength="30"
                                           android:imeOptions="flagNoFullscreen|flagNoExtractUi"                                           
                                           android:selectAllOnFocus="true"
                                           android:paddingTop="0dp"
                                           android:paddingBottom="1dp"
                                           android:inputType="textPassword"
                                           android:gravity="left|center_vertical"
                                           android:textColor="#000000"
                                           android:textSize="@dimen/xhdpi_22sp" />                               
                         </LinearLayout>
                         
                   
                </LinearLayout>     
             </ScrollView>
             
                  
         </LinearLayout>   
        

         <View 
                android:layout_width="@dimen/xhdpi_3dp"
                android:layout_height="match_parent"
                android:background="#A0A0A0">
         </View>
        <!--  ================================================  -->    
         <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >   
            
              
              <Button
                            android:id="@+id/btn_ok"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/xhdpi_45dp"
                            android:layout_margin="@dimen/xhdpi_3dp"
                            android:text="确定"
                            android:gravity="center"
                            android:textSize="@dimen/xhdpi_25sp"
                            android:background="@drawable/btn_white_yellow"
                            android:textColor="#FFFFFF" />

             <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/xhdpi_45dp"
                            android:layout_margin="@dimen/xhdpi_3dp"
                            android:text="取消"
                            android:gravity="center"
                            android:textSize="@dimen/xhdpi_25sp"
                            android:background="@drawable/btn_white_yellow"
                            android:textColor="#FFFFFF" />
             
        </LinearLayout>
        
         <View 
                android:layout_width="@dimen/xhdpi_3dp"
                android:layout_height="match_parent"
                android:background="#A0A0A0">
         </View>
         
         
    </LinearLayout>  
    
     <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/xhdpi_3dp"
                android:background="#A0A0A0">
     </View>

</LinearLayout>